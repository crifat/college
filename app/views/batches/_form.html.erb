<%= form_for @batch, :html => { :class => "form-horizontal batch" } do |f| %>

    <% if @batch.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@batch.errors.count, "error") %> prohibited this batch from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @batch.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
    <%= error_span(@batch[:code]) %>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@batch[:title]) %>
  </div>
    <div class="control-group">
      <%= f.label 'department id', :class => 'control-label' %>
      <div class="controls">
        <%= f.select :department_id, options_from_collection_for_select(Department.all, :id, :title), {}, include_blank: false ,prompt: true, :class => 'text_field form-control' %>
      </div>
    </div>
  <div class="control-group">
    <%= f.label :year, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :year, :class => 'form-control' %>
    </div>
    <%= error_span(@batch[:year]) %>
  </div>



  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            batches_path, :class => 'btn btn-default' %>

<% end %>
